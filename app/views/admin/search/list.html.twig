{% extends 'admin/search/layout.html.twig' %}

{% block breadcrumbs %}
	{{ parent() }}
	<a class="current" href="#">{{ title }}</a>
	<a href="javascript:history.back();">voltar</a>
{% endblock %}

{% block group %}
	
	{% if response %}
		{{ blocks.alert(response.text, response.class) }}
	{% endif %}

	<div class="row">
		<div class="large-12 columns">
		{% if result %}
		<table class="large-12 columns table">
			{# <thead>
				<tr>
					<td><small><b>TIPO</b></small></td>
					<td><small><b>LINHA</b></small></td>
				</tr>
			</thead> #}
			<tbody>
				{% for item in result %}
				    <tr>
				    	<td>{{ item|raw }}</td>
				    </tr>
				{% endfor %}
			</tbody>
		</table>
		{% else %}
			<div class="text-center">
				<form action="{{ urladm ~ '/search' }}">
					<input type="text" name="term" placeholder="Realizar Nova busca">
				</form>
			</div>
		{% endif %}
		</div>
	</div>

{% endblock %}
