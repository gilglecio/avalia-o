<h4>Escalas</h4>

{# <label><b>Escalas:</b> Insira cada opção em uma linha separada.</label>
<textarea style="height:120px;" name="options"></textarea> #}

<label><input {% if scales == {} %} disabled {% else %} checked {% endif %} type="radio" name="action" value="select" id="select_scale"> Selecionar uma Escala</label>

{% if scales %}
<div id="content_select_scale" class="{% if scales == {} %} hide {% endif %}">
	<select name="scale_id">
		<option value="">-- Selecione uma Escala --</option>
		{% for scale in scales %}
		    <option value="{{ scale.id }}">{{ scale.name }}</option>
		{% endfor %}
	</select>
</div>
{% endif %}

<label><input type="radio" value="new" name="action" {% if scales == {} %} checked {% endif %} id="new_scale"> Criar uma escala</label>

<div id="content_new_scale" class="{% if scales %} hide {% endif %}">
	<div class="large-8">
		<div class="large-9 columns">
			<input type="text" name="scale_name" placeholder="Nome da Escala/Apelido">
		</div>
		<div class="large-3 columns">
			<label>Peso:</label>
		</div>
	</div>

	{% for i in 1..5 %}
	
	<div class="large-8">
		<div class="large-9 columns">
			<input placeholder="Rótulo {{ i }}" name="scale_label[]" type="text">
		</div>
		<div class="large-3 columns">
			<input name="scale_value[]" type="text" value="{{ i }}">
		</div>
	</div>
	{% endfor %}
	
</div>
<script>
	$(function () {
		$('#select_scale').on('change', function () {
			$('#content_select_scale').show();
			$('#content_new_scale').hide();
		});
		$('#new_scale').on('change', function () {
			$('#content_select_scale').hide();
			$('#content_new_scale').show();
		});
	});

</script>