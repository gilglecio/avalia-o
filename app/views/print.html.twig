    <head>
        {% block metas %}
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
            <meta name="viewport" content="width=device-width">
        {% endblock %}

        <title>{% block title %}Avaliação{% endblock %}</title>

        {% block css %}
            <link href="{{ base }}static/css/screen.css" rel="stylesheet">
            <link href="{{ base }}static/css/foundation.min.css" rel="stylesheet">
            <style>
            
            </style>
        {% endblock %}

        <!--[if IE]>
        <link href="{{ base }}static/css/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
        <![endif]-->

        <!--[if lt IE 9]>
          <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js"></script>
          <script src="//s3.amazonaws.com/nwapi/nwmatcher/nwmatcher-1.2.5-min.js"></script>
          <script src="//html5base.googlecode.com/svn-history/r38/trunk/js/selectivizr-1.0.3b.js"></script>
          <script src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.1.0/respond.min.js"></script>
        <![endif]-->

        {% block js %}
            <script src="{{ base }}static/js/jquery.min.js"></script>
            {# <script data-main="{{ base }}static/js/main" src="{{ base }}static/js/require.js"></script> #}
            <script src="{{ base }}static/js/foundation.min.js"></script>
        {% endblock %}
    </head>

    <body>
        {% block body %}{% endblock %}

        {% block js_bottom %}
        <script>
            document.write('<script src=' + ('__proto__' in {} ? '{{ base }}static/js/zepto' : '{{ base }}static/js/jquery') + '.js><\/script>');
            $(document).foundation();

            $(function () {
                $('#range').on('change', function () {
                    $('#value_range').val($(this).val());
                });
            });

            setTimeout(function() {
                $('.alert-box').fadeOut();
            }, 5000);

            $(function () {

                $('#required').on('change', function () {

                });

                $('#accepted_justification').on('change', function () {
                    
                });

                $('#justification_required').on('change', function () {
                    
                    var check = $(this).attr('checked');

                    $('#accepted_justification').attr('checked', check);
                    $('#required').attr('checked', check);

                });
            });
            
        </script>
        <script src="{{ base }}static/js/confirm.js"></script>
        
        {% endblock %}
    </body>
</html>
